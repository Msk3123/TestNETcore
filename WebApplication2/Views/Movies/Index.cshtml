@model IEnumerable<WebApplication2.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Фільми</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати новий</a>
</p>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Назва</th>
            <th>Дата виходу</th>
            <th>Жанр</th>
            <th>Ціна</th>
            <th>Дії</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ReleaseDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Genre</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Фільмів поки що немає. <a asp-action="Create">Додайте перший!</a></p>
}